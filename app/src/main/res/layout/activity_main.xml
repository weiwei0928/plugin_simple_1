<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:text="fragment1"
        android:id="@+id/main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/test_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试service" />

    <Button
        android:layout_below="@id/test_service"
        android:id="@+id/test_broadcastReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试广播" />
    <Button
        android:layout_below="@id/test_broadcastReceiver"
        android:id="@+id/test_contentProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试contentProvider" />


</RelativeLayout>
